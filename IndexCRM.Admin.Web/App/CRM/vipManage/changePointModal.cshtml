<div>
    <form name="changePointForm" role="form" novalidate class="form-validation">
        <div class="modal-header">
            <h4 class="modal-title">
                <span>修改积分_{{vm.vipName}}</span>
            </h4>
        </div>
        <div class="modal-body">

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group form-md-line-input form-md-floating-label no-hint">
                        <button type="button" class="btn btn-primary blue x-large ng-isolate-scope">
                            <span>用户积分:{{vm.vipPoint}} </span>
                        </button>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group form-md-line-input form-md-floating-label no-hint">
                        <input type="number" name="Amount" class="form-control" ng-class="{'edited':vm.amount}" ng-model="vm.amount" required>
                        <label>修改数量</label>
                        <span class="help-block">填写负数可以减少积分</span>
                    </div>
                </div>
            </div>

        </div>


        <div class="modal-footer">
            <button ng-disabled="vm.saving" type="button" class="btn btn-default" ng-click="vm.cancel()">@L("Cancel")</button>
            <button type="submit" button-busy="vm.saving" busy-text="提交中..." class="btn btn-primary blue" ng-click="vm.save()" ng-disabled="changePointForm.$invalid"><i class="fa fa-save"></i> <span>确 认</span></button>
        </div>
    </form>
</div>